<h1 class="todo-header">Your Todos</h1>

<ul class="todo-view">
  {{#each todos}}
    <li class="todo-item">
      <div class="todo-content">
        <strong>{{this.title}}</strong>
        <p>{{this.description}}</p>
        <span class="status">{{this.status}}</span>
      </div>
      <div class="todo-actions">
        <form action="/todos/edit/{{this._id}}" method="POST" class="todo-form">
          <input type="text" name="title" value="{{this.title}}" placeholder="Edit Title" required>
          <textarea name="description" placeholder="Edit Description">{{this.description}}</textarea>
          <button type="submit" class="btn btn-edit">Edit</button>
        </form>
        <form action="/todos/delete/{{this._id}}" method="POST" class="todo-form">
          <button type="submit" class="btn btn-delete">Delete</button>
        </form>
      </div>
    </li>
  {{/each}}
</ul>

<form action="/todos/create" method="POST" class="todo-create-form">
  <h2>Add a New Todo</h2>
  <input type="text" name="title" placeholder="Enter Todo Title" required>
  <textarea name="description" placeholder="Enter Description"></textarea>
  <button type="submit" class="btn btn-add">Add Todo</button>
</form>
